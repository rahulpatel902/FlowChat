# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration
# Preferred: use a single DATABASE_URL from Neon (PostgreSQL)
# Direct (recommended for migrations):
# DATABASE_URL=postgresql://neondb_owner:YOUR_PASSWORD@ep-your-host.ap-southeast-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require
# Optional pooled (good for runtime traffic):
# DATABASE_URL=postgresql://neondb_owner:YOUR_PASSWORD@ep-your-host-pooler.ap-southeast-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require
# If DATABASE_URL is set, the DB_* variables below are ignored.
DB_NAME=flowchat
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# Firebase Configuration
FIREBASE_TYPE=service_account
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_CLIENT_ID=your-client-id

# Redis Configuration (for Channels)
REDIS_URL=redis://localhost:6379

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Superuser bootstrap (used by management command `create_superuser`)
# These are safe defaults for local dev; override in production deploy settings
SUPERUSER_EMAIL=admin@flowchat.com
SUPERUSER_PASSWORD=admin123
SUPERUSER_USERNAME=admin
SUPERUSER_FIRST_NAME=Admin
SUPERUSER_LAST_NAME=User
